{
  "name": "@hgraph/auth",
  "version": "1.0.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "NestJS based modules for authentication. Supports local (email, username & password) and Supabase authentication.",
  "private": false,
  "author": {
    "name": "Rinto Jose",
    "email": "rintoj@gmail.com"
  },
  "exports": {
    ".": "./dist/index.js",
    "./local": "./dist/local/index.js",
    "./supabase": "./dist/supabase/index.js",
    "./google": "./dist/google/index.js",
    "./package.json": "./package.json"
  },
  "repository": "https://github.com/rintoj/hypergraph-auth.git",
  "scripts": {
    "test": "jest",
    "lint": "eslint --fix && tsc -p . --noEmit && yarn prettier",
    "prettier": "prettier --write \"**/src/**/*.{ts,tsx}\" -c",
    "build": "rimraf dist && tsc -p .",
    "semantic-release": "semantic-release"
  },
  "license": "MIT",
  "dependencies": {
    "@hgraph/storage": "1.3.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.4",
    "@nestjs/platform-express": "^11.0.1",
    "@supabase/supabase-js": "^2.48.0",
    "bcrypt": "^5.1.1",
    "cookie": "^1.0.2",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "tsds-tools": "^1.2.1",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "pg": "^8.13.1",
    "pg-mem": "^3.0.4",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
